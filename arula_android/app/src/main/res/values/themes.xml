<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Main Arula Neon Theme - Dark Purple Aesthetic -->
    <style name="Theme.ArulaTerminal" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary colors (Purple neon) -->
        <item name="colorPrimary">@color/neon_accent</item>
        <item name="colorPrimaryVariant">@color/neon_accent_soft</item>
        <item name="colorOnPrimary">@color/neon_text</item>
        
        <!-- Secondary colors -->
        <item name="colorSecondary">@color/neon_glow</item>
        <item name="colorSecondaryVariant">@color/neon_accent_soft</item>
        <item name="colorOnSecondary">@color/neon_text</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/neon_background</item>
        <item name="colorSurface">@color/neon_surface</item>
        <item name="colorOnSurface">@color/neon_text</item>
        
        <!-- Status bar -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/neon_background</item>
        <item name="android:navigationBarColor" tools:targetApi="l">@color/neon_background</item>
        
        <!-- Window background -->
        <item name="android:windowBackground">@color/neon_background</item>
        
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/neon_text</item>
        <item name="android:textColorSecondary">@color/neon_muted</item>
        <item name="android:textColorHint">@color/neon_muted</item>
        
        <!-- No action bar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.ArulaTerminal.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.ArulaTerminal.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />
    <style name="Theme.ArulaTerminal.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Dark" />
    
    <!-- Neon Toolbar style -->
    <style name="Widget.ArulaTerminal.NeonToolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@color/neon_surface</item>
        <item name="titleTextColor">@color/neon_text</item>
        <item name="android:elevation">0dp</item>
    </style>
    
    <!-- Neon Button style -->
    <style name="Widget.ArulaTerminal.NeonButton" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/neon_accent</item>
        <item name="android:textColor">@color/neon_text</item>
        <item name="cornerRadius">12dp</item>
    </style>
    
    <!-- Neon Text Input style -->
    <style name="Widget.ArulaTerminal.NeonTextInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/neon_surface</item>
        <item name="boxStrokeColor">@color/neon_border</item>
        <item name="hintTextColor">@color/neon_muted</item>
        <item name="android:textColorHint">@color/neon_muted</item>
    </style>
    
    <!-- Neon Message Card style -->
    <style name="Widget.ArulaTerminal.NeonMessageCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/neon_surface_raised</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">4dp</item>
        <item name="strokeColor">@color/neon_border</item>
        <item name="strokeWidth">1dp</item>
    </style>
</resources>