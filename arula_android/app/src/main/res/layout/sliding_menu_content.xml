<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/menuContent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:clipChildren="false">

    <!-- Main Menu Container -->
    <LinearLayout
        android:id="@+id/mainMenuContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="48dp"
        android:paddingBottom="80dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="32dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Settings"
                android:textColor="@color/neon_accent"
                android:textSize="24sp"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Configure your AI"
                android:textColor="@color/neon_muted"
                android:textSize="14sp"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <!-- Provider & Model - Fixed Height -->
        <com.arula.terminal.ui.canvas.TiltCardView
            android:id="@+id/btnProvider"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_marginBottom="12dp"
            android:clickable="true"
            android:focusable="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_settings"
                    android:tint="@color/neon_accent"
                    android:layout_marginEnd="16dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Provider &amp; Model"
                        android:textColor="@color/neon_text"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="AI provider and model"
                        android:textColor="@color/neon_muted"
                        android:textSize="12sp"
                        android:layout_marginTop="2dp" />

                </LinearLayout>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_arrow_right"
                    android:tint="@color/neon_muted" />

            </LinearLayout>

        </com.arula.terminal.ui.canvas.TiltCardView>

        <!-- Behavior - Fixed Height -->
        <com.arula.terminal.ui.canvas.TiltCardView
            android:id="@+id/btnBehavior"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_marginBottom="12dp"
            android:clickable="true"
            android:focusable="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_tune"
                    android:tint="@color/neon_accent"
                    android:layout_marginEnd="16dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Behavior"
                        android:textColor="@color/neon_text"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="AI behavior settings"
                        android:textColor="@color/neon_muted"
                        android:textSize="12sp"
                        android:layout_marginTop="2dp" />

                </LinearLayout>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_arrow_right"
                    android:tint="@color/neon_muted" />

            </LinearLayout>

        </com.arula.terminal.ui.canvas.TiltCardView>

        <!-- Appearance - Fixed Height -->
        <com.arula.terminal.ui.canvas.TiltCardView
            android:id="@+id/btnAppearance"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_marginBottom="12dp"
            android:clickable="true"
            android:focusable="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_palette"
                    android:tint="@color/neon_accent"
                    android:layout_marginEnd="16dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Appearance"
                        android:textColor="@color/neon_text"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Visual settings"
                        android:textColor="@color/neon_muted"
                        android:textSize="12sp"
                        android:layout_marginTop="2dp" />

                </LinearLayout>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_arrow_right"
                    android:tint="@color/neon_muted" />

            </LinearLayout>

        </com.arula.terminal.ui.canvas.TiltCardView>

    </LinearLayout>

    <!-- Submenu Container (slides in from right) -->
    <ScrollView
        android:id="@+id/submenuContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingTop="48dp"
            android:paddingBottom="80dp">

            <!-- Submenu Header with Back Button -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="24dp">

                <ImageButton
                    android:id="@+id/backButton"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_arrow_back"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:tint="@color/neon_accent"
                    android:scaleType="centerInside"
                    android:padding="8dp"
                    android:layout_marginEnd="12dp"
                    android:contentDescription="@string/back" />

                <TextView
                    android:id="@+id/submenuTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Settings"
                    android:textColor="@color/neon_accent"
                    android:textSize="20sp"
                    android:fontFamily="sans-serif-medium" />

            </LinearLayout>

            <!-- Provider Settings Content -->
            <LinearLayout
                android:id="@+id/providerContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <!-- Provider Dropdown -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Provider"
                    android:textColor="@color/neon_muted"
                    android:textSize="12sp"
                    android:layout_marginBottom="8dp" />

                <Spinner
                    android:id="@+id/providerSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/bg_neon_input"
                    android:padding="12dp"
                    android:layout_marginBottom="16dp" />

                <!-- Z.AI Endpoint (only visible for z.ai provider) -->
                <LinearLayout
                    android:id="@+id/zaiEndpointContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Endpoint"
                        android:textColor="@color/neon_muted"
                        android:textSize="12sp"
                        android:layout_marginBottom="8dp" />

                    <Spinner
                        android:id="@+id/zaiEndpointSpinner"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/bg_neon_input"
                        android:padding="12dp"
                        android:layout_marginBottom="16dp" />

                </LinearLayout>


                <!-- Model Selector -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Model"
                    android:textColor="@color/neon_muted"
                    android:textSize="12sp"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:id="@+id/modelSelector"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/bg_neon_input"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="12dp"
                    android:layout_marginBottom="16dp"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:id="@+id/modelName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Select a model"
                        android:textColor="@color/neon_text"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_arrow_right"
                        android:tint="@color/neon_accent" />

                </LinearLayout>

                <!-- API Key -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="API Key"
                    android:textColor="@color/neon_muted"
                    android:textSize="12sp"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/apiKeyInput"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/bg_neon_input"
                    android:hint="Enter your API key"
                    android:inputType="textPassword"
                    android:textColor="@color/neon_text"
                    android:textColorHint="@color/neon_muted"
                    android:padding="12dp"
                    android:layout_marginBottom="16dp" />

                <!-- Thinking Mode Toggle -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <CheckBox
                        android:id="@+id/thinkingModeCheckbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/neon_accent" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Enable thinking mode"
                        android:textColor="@color/neon_text"
                        android:textSize="14sp" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Requires reasoning models (OpenAI o1/o3, Claude)"
                    android:textColor="@color/neon_muted"
                    android:textSize="11sp"
                    android:layout_marginBottom="16dp" />

                <!-- Endpoint URL -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Endpoint URL"
                    android:textColor="@color/neon_muted"
                    android:textSize="12sp"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/endpointInput"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/bg_neon_input"
                    android:hint="https://api.example.com/v1"
                    android:inputType="textUri"
                    android:textColor="@color/neon_text"
                    android:textColorHint="@color/neon_muted"
                    android:padding="12dp" />

            </LinearLayout>

            <!-- Behavior Settings Content -->
            <LinearLayout
                android:id="@+id/behaviorContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <!-- System Prompt -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="System Prompt"
                    android:textColor="@color/neon_muted"
                    android:textSize="12sp"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/systemPromptInput"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:background="@drawable/bg_neon_input"
                    android:hint="You are a helpful assistant..."
                    android:inputType="textMultiLine"
                    android:textColor="@color/neon_text"
                    android:textColorHint="@color/neon_muted"
                    android:padding="12dp"
                    android:gravity="top"
                    android:layout_marginBottom="16dp" />

                <!-- Temperature -->
                <TextView
                    android:id="@+id/temperatureLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Temperature: 0.7"
                    android:textColor="@color/neon_muted"
                    android:textSize="12sp"
                    android:layout_marginBottom="8dp" />

                <SeekBar
                    android:id="@+id/temperatureSeekBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="20"
                    android:progress="7"
                    android:progressTint="@color/neon_accent"
                    android:thumbTint="@color/neon_accent"
                    android:layout_marginBottom="16dp" />

                <!-- Max Tokens -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Max Tokens"
                    android:textColor="@color/neon_muted"
                    android:textSize="12sp"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/maxTokensInput"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/bg_neon_input"
                    android:hint="2048"
                    android:inputType="number"
                    android:textColor="@color/neon_text"
                    android:textColorHint="@color/neon_muted"
                    android:padding="12dp"
                    android:layout_marginBottom="16dp" />

                <!-- Streaming Toggle -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Enable Streaming"
                        android:textColor="@color/neon_text"
                        android:textSize="14sp" />

                    <Switch
                        android:id="@+id/streamingSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:thumbTint="@color/neon_accent"
                        android:trackTint="@color/neon_muted" />

                </LinearLayout>

            </LinearLayout>

            <!-- Appearance Settings Content -->
            <LinearLayout
                android:id="@+id/appearanceContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Visual Settings"
                    android:textColor="@color/neon_muted"
                    android:textSize="14sp"
                    android:layout_marginBottom="16dp" />

                <!-- Living Background Toggle -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Living Background"
                            android:textColor="@color/neon_text"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Animated particle background"
                            android:textColor="@color/neon_muted"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <Switch
                        android:id="@+id/livingBackgroundSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:thumbTint="@color/neon_accent"
                        android:trackTint="@color/neon_muted"
                        android:checked="true" />

                </LinearLayout>

                <!-- Debug Mode Toggle -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Debug Mode"
                            android:textColor="@color/neon_text"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Show request details in errors"
                            android:textColor="@color/neon_muted"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <Switch
                        android:id="@+id/debugModeSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:thumbTint="@color/neon_accent"
                        android:trackTint="@color/neon_muted"
                        android:checked="false" />

                </LinearLayout>

            </LinearLayout>

            <!-- Submenu Items Container (for dynamic content) -->
            <LinearLayout
                android:id="@+id/submenuItems"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

        </LinearLayout>

    </ScrollView>

    <!-- Floating Close Button (Bottom Left) -->
    <ImageButton
        android:id="@+id/closeMenuButton"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_gravity="bottom|start"
        android:layout_margin="16dp"
        android:src="@drawable/ic_close"
        android:background="@drawable/bg_neon_button"
        android:tint="@color/neon_text"
        android:scaleType="centerInside"
        android:padding="14dp"
        android:elevation="8dp"
        android:contentDescription="@string/close" />

</FrameLayout>