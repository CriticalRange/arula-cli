<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mainContainer">

    <!-- Living Background -->
    <com.arula.terminal.ui.canvas.LivingBackground
        android:id="@+id/livingBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Main Content Container (No Toolbar) -->
    <FrameLayout
        android:id="@+id/coordinator"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Messages List -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/messageList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="80dp"
            android:padding="12dp"
            android:clipToPadding="false"
            android:scrollbars="none" />

        <!-- Enhanced Typing Indicator with Animation -->
        <LinearLayout
            android:id="@+id/typingIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|start"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="90dp"
            android:background="@drawable/bg_neon_input"
            android:padding="12dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:visibility="gone">

            <com.arula.terminal.ui.canvas.LoadingSpinner
                android:id="@+id/typingSpinner"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/typing"
                android:textColor="@color/neon_accent"
                android:textStyle="italic"
                android:fontFamily="sans-serif" />

        </LinearLayout>

        <!-- Input Bar at Bottom -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="horizontal"
            android:padding="16dp"
            android:background="@color/neon_surface"
            android:elevation="8dp">

            <!-- Menu Button (Hamburger) -->
            <ImageButton
                android:id="@+id/menuButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_menu"
                android:background="@drawable/bg_neon_button"
                android:contentDescription="@string/menu"
                android:tint="@color/neon_text"
                android:layout_marginEnd="12dp"
                android:scaleType="centerInside"
                android:padding="12dp"
                android:elevation="4dp" />

            <!-- Message Input Field -->
            <EditText
                android:id="@+id/messageInput"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/message_input_hint"
                android:inputType="textMultiLine|textCapSentences"
                android:maxLines="4"
                android:textColor="@color/neon_text"
                android:textColorHint="@color/neon_muted"
                android:background="@drawable/bg_neon_input"
                android:padding="16dp"
                android:layout_marginEnd="12dp"
                android:importantForAutofill="no" />

            <!-- Send Button -->
            <ImageButton
                android:id="@+id/sendButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_send"
                android:background="@drawable/bg_neon_button"
                android:contentDescription="@string/send"
                android:enabled="false"
                android:tint="@color/neon_text"
                android:scaleType="centerInside"
                android:padding="12dp"
                android:elevation="4dp" />

        </LinearLayout>

    </FrameLayout>

    <!-- Sliding Menu (Overlay) -->
    <com.arula.terminal.ui.menu.SlidingMenuView
        android:id="@+id/slidingMenu"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</FrameLayout>